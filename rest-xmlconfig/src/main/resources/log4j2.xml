<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<Configuration>
    <Properties>
        <Property name="package">com.yx.acs</Property>
        <Property name="fileName">acs.log</Property>
        <Property name="pattern">%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] [%t] [%C{1}.%M] (%F:%L) - %m%n
        </Property>
    </Properties>

    <Appenders>
        <RollingFile name="R" fileName="${fileName}" append="false"
                     filePattern="${fileName}.%d{yyyy-MM-dd}.%i">
            <PatternLayout pattern="${pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="30 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingFile>

        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern}"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- show sql -->
        <!-- <Logger name="org.hibernate.SQL" level="DEBUG"/>-->
        <!-- show binding parameter-->
        <!-- <Logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>-->
        <!--<Logger name="net.sf.ehcache" level="DEBUG"/>-->
        <!--<Logger name="net.sf.ehcache.distribution" level="WARN"/>-->
        <Logger name="${package}" level="DEBUG"/>

        <Root level="INFO">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="R"/>
        </Root>
    </Loggers>
</Configuration>
